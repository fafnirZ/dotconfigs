echo ".bashrc_arch loaded"

# comment this if you dont want fastfetch(neofetch) printed
fastfetch

# call this for kde display
kde() {
	# runs using wayland
	XDG_SESSION_TYPE=wayland dbus-run-session startplasma-wayland
}

#  can run hyprland instead of kde for hyprland display
# > hyprland 

wallpaper() {
	echo $#
	if [[ $# -lt 1 ]]; then 
		WALLPAPER_DIR="$HOME/wallpapers"
		CURRENT_WALL=$(hyprctl hyprpaper listloaded)
		# Get a random wallpaper that is not the current one
		WALLPAPER=$(find "$WALLPAPER_DIR" -type f ! -name "$(basename "$CURRENT_WALL")" | shuf -n 1)

		echo "loading $WALLPAPER"
		# Apply the selected wallpaper
		hyprctl hyprpaper reload eDP-1,"$WALLPAPER"	
		hyprctl hyprpaper reload HDMI-A-1,"$WALLPAPER"	
		return
	else
		WALLPAPER_DIR="$HOME/wallpapers"
		WALLPAPER="$WALLPAPER_DIR/$1"

		echo "loading $WALLPAPER"
		# Apply the selected wallpaper
		hyprctl hyprpaper reload eDP-1,"$WALLPAPER"	
		hyprctl hyprpaper reload HDMI-A-1, "$WALLPAPER"
	fi

}

wifi_show() {
	iwctl station wlan0 show
}

dhcp() {
	dhclient
}

mixer() {
	pavucontrol
}

